<template name="feedbacks">
  <view class="page-section">
    <view class="space"></view>
    <view wx:if="{{showhead}}" class="section-title">
      <view>
        投诉处理
      </view>
      <view class='more'>
        <navigator openType="switchTab" url="/pages/feedback/feedbacklist" hover-class="none">
          更多>>
        </navigator>
      </view>
    </view>
    <block wx:for="{{feedbacks}}" wx:for-index="idx" wx:key="{{item.CPID}}">
      <navigator url="/pages/feedback/feedback?id={{item.CPID}}&txt={{item.CNME}}">
      
      <view class="page-content">
        <view class="cpt-item">
          <view class="cpt-img">
            <image src='/image/dot.png' style="background-color:{{COLOR[idx%COLOR.length]}};"></image>
          </view>
          <view class="cpt-content">
            <view class="cpt-head">
              <text class="cpt-space">{{item.CNME}}</text>
            </view>
          </view>
        </view>
        </view>
      
      </navigator>
    </block>
  </view>
</template>