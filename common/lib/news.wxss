.cpt-item {
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.cpt-img {
  margin: 10rpx 30rpx 15rpx 20rpx;
}

.cpt-img-50 {
  margin: 0rpx 30rpx 0rpx 20rpx;
}

.cpt-opt {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-end;
}

.cpt-opt image {
  width: 50rpx;
  height: 50rpx;
}

.cpt-img image {
  width: 20rpx;
  height: 20rpx;
  border-radius: 100%;
  box-shadow: 0rpx 0rpx 0rpx 2rpx #555;
}

.cpt-img-50 image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  box-shadow: 0rpx 0rpx 0rpx 2rpx #888;
}

.cpt-content {
  flex-grow: 2;
  align-items: center;
  align-content: center;
  display: flex;
}

.cpt-head {
  color: #696969;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  letter-spacing: 5rpx;
}

.cpt-txt {
  font-size: 26rpx;
  color: #808080;
}

.cpt-item .cpt-space {
  margin-left: 20rpx;
}
