<!--pages/riverinfo/riverinfo.wxml-->
<view class="container">
  <view class="page-section">
    <image src="https://www.yondo.cc/ris/images/10{{idx%4}}.jpg" class="swiper-item" mode="scaleToFill" />
  </view>
  <view class="funlist">
    <label data-status='0' bindtap='changestatus' style="{{(status=='0'?'background-color:#eee;':'')}}">河道水情</label>
    <label data-status='1' bindtap='changestatus' style="{{(status=='1'?'background-color:#eee;':'')}}">实时视频</label>
    <label data-status='2' bindtap='changestatus' style="{{(status=='2'?'background-color:#eee;':'')}}">一河一策</label>
    <label data-status='3' bindtap='changestatus' style="{{(status=='3'?'background-color:#eee;':'')}}">河道巡视</label>
    <label data-status='4' bindtap='changestatus' style="{{(status=='4'?'background-color:#eee;':'')}}">投诉信息</label>
  </view>
  <view wx:if="{{status == '0'}}" class="ptext">
    <view class="phead">
      <label>{{rivers[idx].riverName}}</label>
      <label>{{rivers[idx].levelName}}河道</label>
    </view>
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
      <view class="phead">
        <label>水文段</label>
        <view class="picker">
          {{array[index]}}
        </view>
      </view>
    </picker>
    <view class="preal">
      <label class="preal-head">实时监测数据</label>
      <view class="pdata">
        <view class='pdata-item'>
          <view class='nme'>
            <label>DO</label>
            <label>溶解氧</label>
          </view>
          <view class='data'>{{DO}}</view>
        </view>
        <view class='pdata-item'>
          <view class='nme'>
            <label>CODmn</label>
            <label>高锰酸钾指数</label>
          </view>
          <view class='data'>{{CODmn}}</view>
        </view>
        <view class='pdata-item'>
          <view class='nme'>
            <label>NH3-H</label>
            <label>氨氮</label>
          </view>
          <view class='data'>{{NH3}}</view>
        </view>
        <view class='pdata-item'>
          <view class='nme'>
            <label>TP</label>
            <label>总磷</label>
          </view>
          <view class='data'>{{Tp}}</view>
        </view>
        <view class='pdata-item'>
          <view class='nme'>
            <label>ORP</label>
            <label>氧化还原电位</label>
          </view>
          <view class='data'>{{ORP}}</view>
        </view>
        <view class='pdata-item'>
          <view class='nme'>
            <label>Transp</label>
            <label>透明度</label>
          </view>
          <view class='data'>{{Transp}}</view>
        </view>
      </view>
    </view>
    <view class="phist">
      <canvas canvas-id="wxChartCanvas" class="canvas"></canvas>
    </view>
  </view>
  <view wx:if="{{status == '1'}}" class="pvideo">
    <video src="https://www.yondo.cc/ris/images/11861574-1.mp4" controls="{{false}}" autoplay="{{true}}" loop="{{true}}" objectFit="fill"></video>
  </view>
  <view wx:if="{{status == '2'}}" class="ptext">
    {{rivers[idx].chiefDuty}}
  </view>
  <view wx:if="{{status == '3'}}" class="ptext">
    <navigator url="/pages/riverinfo/addworkinfo_view?id=001&txt=2017年10月28日巡河记录">
      <view class="cpt-item">
        <view class="cpt-content">
          <view class="cpt-head">
            <text class="cpt-space">2017年10月28日巡河记录</text>
          </view>
        </view>
      </view>
    </navigator>
    <navigator url="/pages/riverinfo/addworkinfo_view?id=002&txt=2017年11月2日巡河记录">
      <view class="cpt-item">
        <view class="cpt-content">
          <view class="cpt-head">
            <text class="cpt-space">2017年11月2日巡河记录</text>
          </view>
        </view>
      </view>
    </navigator>
    <view class="create" hover-class="act-create">
      <button class="custBtn" bindtap='createfeedback'>
        <image src="/image/plus.png"></image>
      </button>
    </view>
  </view>
  <view wx:if="{{status == '4'}}" class="ptext">
    <navigator url="/pages/feedback/feedbackinfo?id=004&txt=严重工业污染">
      <view class="cpt-item">
        <view class="cpt-content">
          <view class="cpt-head">
            <text class="cpt-space">严重工业污染</text>
          </view>
        </view>
      </view>
    </navigator>
    <navigator url="/pages/feedback/feedbackinfo?id=005&txt=河水变黑">
      <view class="cpt-item">
        <view class="cpt-content">
          <view class="cpt-head">
            <text class="cpt-space">河水变黑</text>
          </view>
        </view>
      </view>
    </navigator>
  </view>
</view>