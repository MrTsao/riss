/* pages/news/newslist.wxss */
@import "../../common/lib/news.wxss";

.swiper {
  width: 100%;
  height: 350rpx;
  letter-spacing: 5rpx;
  background-color: #999;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.swiper-item {
  width: 100%;
  height: 350rpx;
  text-align: center;
}

.swiper-shadow {
  position: absolute;
  bottom: -1rpx;
  z-index: 1;
  width: 100%;
  height: 0rpx;
  background-color: #999;
  box-shadow: 0 -20rpx 180rpx 50rpx #333;
}

.swiper-text {
  position: absolute;
  bottom: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #fff;
  text-align: justify;
  font-weight: bolder;
  z-index: 2;
}