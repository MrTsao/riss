/* pages/feedback/feedbackinfo.wxss */
@import "../../common/lib/weui.wxss";


.swiper {
  width: 100%;
  height: 250rpx;
  letter-spacing: 5rpx;
  background-color: #999;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.swiper-item {
  width: 100%;
  height: 250rpx;
  text-align: center;
}

.swiper-shadow {
  position: absolute;
  bottom: -1rpx;
  z-index: 1;
  width: 100%;
  height: 0rpx;
  background-color: #999;
  box-shadow: 0 -20rpx 180rpx 50rpx #333;
}

.swiper-text {
  position: absolute;
  bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #fff;
  text-align: justify;
  font-weight: bolder;
  z-index: 2;
}


label {
  display: inline-block;
  min-width: 130rpx;
  margin-top: 0rpx;
  margin-right: 20rpx;
}

form {
  width: 100%;
}

.ref-content {
  color: #666;
  font-size: 30rpx;
  text-indent: 60rpx;
  letter-spacing: 8rpx;
  line-height: 60rpx;
}

